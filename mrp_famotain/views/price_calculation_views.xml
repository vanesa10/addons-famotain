<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="mrp_famotain.price_calculation_search">
            <field name="name">Price Calculation Search</field>
            <field name="model">mrp_famotain.price_calculation</field>
            <field name="arch" type="xml">
                <search string="Search Price Calculation">
                    <field name="name"/>
                    <field name="description"/>
                    <field name="notes"/>
                </search>
            </field>
        </record>

        <record model="ir.ui.view" id="mrp_famotain.price_calculation_tree">
            <field name="name">Price Calculation Tree</field>
            <field name="model">mrp_famotain.price_calculation</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="qty"/>
                    <field name="description"/>
                    <field name="unit_sales"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="mrp_famotain.price_calculation_form">
            <field name="name">Price Calculation Form</field>
            <field name="model">mrp_famotain.price_calculation</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button string="Calculate" name="auto_calculate_all_bom" type="object" class="oe_highlight"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                        </div>
                        <div class="oe_title">
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="qty"/>
                                <field name="production_cost"/>
                                <field name="material_cost" groups="famotain.famotain_manager"/>
                                <field name="total_cost" groups="famotain.famotain_manager"/>
                                <field name="description"/>
                            </group>
                            <group>
                                <field name="unit_sales"/>
                                <field name="unit_cost" groups="famotain.famotain_manager"/>
                                <field name="unit_profit" groups="famotain.famotain_manager"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="BoM Line">
                                <field name="bom_line_ids">
                                    <tree editable="bottom">
                                        <field name="sequence" widget="handle"/>
                                        <field name="component_id"/>
                                        <field name="component_type" invisible="1"/>
                                        <field name="description"/>
                                        <field name="qty"/>
                                        <field name="width" attrs="{'readonly': [('component_type', 'in', ['accessories', 'webbing'])]}"/>
                                        <field name="height" attrs="{'readonly': [('component_type', 'in', ['accessories', 'webbing'])]}"/>
                                        <field name="length" attrs="{'readonly': [('component_type', 'in', ['fabric', 'print', 'accessories', 'embroidery'])]}"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Bill of Materials">
                                <field name="bom_ids">
                                    <tree create="0" delete="0" editable="bottom">
                                        <field name="unit_qty"/>
                                        <field name="component_id"/>
<!--                                        <field name="component_vendor_id"/>-->
                                        <field name="unit_cost" groups="famotain.famotain_manager"/>
                                        <field name="cost" sum="Total Cost" groups="famotain.famotain_manager"/>
                                        <button name="open_record" type="object" class="oe_highlight" icon="fa-asterisk text-success"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                        <group string="Notes">
                            <field name="notes"/>
                        </group>
                        <div class="oe_chatter">
                            <field name="message_follower_ids" widget="mail_followers"/>
                            <field name="activity_ids" widget="mail_activity"/>
                            <field name="message_ids" widget="mail_thread"/>
                        </div>
                    </sheet>
                </form>
            </field>
        </record>

