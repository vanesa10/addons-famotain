<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="mrp_famotain.component_detail_search">
            <field name="name">Component Detail Search</field>
            <field name="model">mrp_famotain.component_detail</field>
            <field name="arch" type="xml">
                <search string="Search Component Detail">
                    <field name="name"/>
                    <field name="component_id"/>
                    <field name="detail"/>
                    <separator/>
                    <group string="Group By">
                        <filter string="Detail" name="group_detail" domain="[]" context="{'group_by':'detail'}"/>
                        <filter string="Component" name="group_component_id" domain="[]" context="{'group_by':'component_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record model="ir.ui.view" id="mrp_famotain.component_detail_tree">
            <field name="name">Component Detail Tree</field>
            <field name="model">mrp_famotain.component_detail</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="component_id"/>
                    <field name="detail"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="mrp_famotain.component_detail_form">
            <field name="name">Component Detail Form</field>
            <field name="model">mrp_famotain.component_detail</field>
            <field name="arch" type="xml">
                <form>
                    <header>

                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="toggle_active" type="object"
                                    class="oe_stat_button" icon="fa-archive">
                                <field name="active" widget="boolean_button"
                                    options='{"terminology": "archive"}'/>
                            </button>
                        </div>
                        <div class="oe_title">
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="component_id"/>
                                <field name="detail"/>
                            </group>
                            <group>
                                <field name="vendor_id"/>
                                <field name="price"/>
                                <field name="gross_price"/>
                                <field name="gross_qty"/>
                                <field name="currency_id" invisible="1"/>
                            </group>
                        </group>
                        <group string="Notes">
                            <field name="notes"/>
                        </group>
                        <div class="oe_chatter">
                            <field name="message_follower_ids" widget="mail_followers"/>
                            <field name="activity_ids" widget="mail_activity"/>
                            <field name="message_ids" widget="mail_thread"/>
                        </div>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>