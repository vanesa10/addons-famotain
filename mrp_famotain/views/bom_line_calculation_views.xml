<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="mrp_famotain.bom_line_calculation_form">
            <field name="name">BoM Line Calculation Form</field>
            <field name="model">mrp_famotain.bom_line_calculation</field>
            <field name="arch" type="xml">
                <form>
                    <header>

                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">

                        </div>
                        <div class="oe_title">
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="price_calculation_id"/>
                                <field name="component_id"/>
                                <field name="component_type" invisible="1"/>
                                <field name="description"/>
                            </group>
                            <group>
                                <field name="qty"/>
                                <field name="width" attrs="{'invisible': [('component_type', 'in', ['accessories', 'webbing'])]}"/>
                                <field name="height" attrs="{'invisible': [('component_type', 'in', ['accessories', 'webbing'])]}"/>
                                <field name="length" attrs="{'invisible': [('component_type', 'in', ['fabric', 'print', 'accessories', 'embroidery'])]}"/>
                            </group>
                        </group>
                        <group string="Notes">
                            <field name="notes"/>
                        </group>
                        <div class="oe_chatter">
                            <field name="message_follower_ids" widget="mail_followers"/>
                            <field name="activity_ids" widget="mail_activity"/>
                            <field name="message_ids" widget="mail_thread"/>
                        </div>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>