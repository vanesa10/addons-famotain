<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="mrp_famotain.bom_calculation_form">
            <field name="name">Bill of Materials Calculation Form</field>
            <field name="model">mrp_famotain.bom_calculation</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                        </div>
                        <div class="oe_title">
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="price_calculation_id"/>
                                <label for="unit_qty" string="Unit Qty"/>
                                <div>
                                    <field name="unit_qty" class="oe_inline"/> -
                                    <field name="uom_id" class="oe_inline"/>
                                </div>
                                <field name="component_id"/>
                                <field name="component_vendor_id"/>
                            </group>
                            <group>
                                <field name="qty"/>
                                <field name="unit_cost" groups="famotain.famotain_manager"/>
                                <field name="cost" groups="famotain.famotain_manager"/>
                            </group>
                        </group>
                        <group string="Notes">
                            <field name="notes"/>
                        </group>
                        <div class="oe_chatter">
                            <field name="message_follower_ids" widget="mail_followers"/>
                            <field name="activity_ids" widget="mail_activity"/>
                            <field name="message_ids" widget="mail_thread"/>
                        </div>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>