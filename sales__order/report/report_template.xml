<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_sales__order_quotation_template">
        <t t-call="web.html_container">
            <t t-call="famotain.external_layout">
                <div class="page">
                    <div class="oe_structure"/>
                    <div class="row mx-0 pt16" style="border-bottom: 1px solid #A9A9A9;">
                        <div class="col-6 mb16">
                            <h2 t-if="o.state=='draft'" class="pt8">Quotation</h2>
                            <h2 t-elif="o.state=='cancel'" class="pt8">Cancelled</h2>
                            <h2 t-else="" class="pt8">Sales Order</h2>
                        </div>
                        <div class="col-6 mb16">
                            <div class="row text-right">
                                <div class="col-12">
                                    <strong><span t-field="o.name"/></strong>
                                </div>
                            </div>
                            <div class="row text-right">
                                <div class="col-12">
                                    Order Date : <span t-esc="o.create_date.strftime('%d-%b-%Y')"/>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row mt16">
                        <div class="col-1 text-right"><strong>To</strong></div>
                        <div class="col-11">
                            <strong><span t-field="o.customer_id.name"/></strong><br/>
                            <span t-field="o.address"/><br/>
                            <span t-field="o.city"/> - <span t-field="o.customer_id.zip_code"/><br/>
                            <span t-field="o.phone"/>
                        </div>
                    </div>

                    <t t-set="design_2" t-value="False"/>
                    <t t-set="design_3" t-value="False"/>
                    <t t-foreach="o.product_order_ids" t-as="product_order">
                        <t t-if="product_order.design_image_2">
                            <t t-set="design_2" t-value="True"/>
                        </t>
                        <t t-if="product_order.design_image_3">
                            <t t-set="design_3" t-value="True"/>
                        </t>
                    </t>

                    <h4 class="mt32">Product Order</h4>
                    <div class="row">
                        <div class="col-12">
                            <table class="table table-sm table-striped table-active">
                                <tr>
                                    <th class="text-center">Qty</th>
                                    <th>Product</th>
                                    <th>Description</th>
                                    <th class="text-center">Design</th>
                                    <th t-if="design_2" class="text-center">Design Side 2</th>
                                    <th t-if="design_3" class="text-center">Design Side 3</th>
                                </tr>

                                <tr t-foreach="o.product_order_ids" t-as="product_order">
                                    <td class="text-center"><span t-field="product_order.qty"/>pcs</td>
                                    <td><span t-field="product_order.product_id.display_name"/></td>
                                    <td><span t-field="product_order.fabric_color"/></td>
                                    <td class="text-center"><img t-if="product_order.product_id.product_type=='product'" t-attf-src="data:image/*;base64,{{product_order.design_image}}" style="max-width:200px; max-height: 150px"/></td>
                                    <td t-if="design_2"  class="text-center"><img t-if="product_order.product_id.product_type=='product'" t-attf-src="data:image/*;base64,{{product_order.design_image_2}}" style="max-width:200px; max-height: 150px"/></td>
                                    <td t-if="design_3"  class="text-center"><img t-if="product_order.product_id.product_type=='product'" t-attf-src="data:image/*;base64,{{product_order.design_image_3}}" style="max-width:200px; max-height: 150px"/></td>
