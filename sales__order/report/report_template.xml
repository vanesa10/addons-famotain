<!--                                    <td style="border: 1px solid #dee2e6;">-->
<!--                                        <span t-if="o.packaging=='-'" t-field="o.packaging"/>-->
<!--                                        <span t-else=""><span t-field="o.packaging"/> - <span t-field="o.packing"/></span>-->
<!--                                    </td>-->
<!--                                </tr>-->
<!--                                <tr>-->
<!--                                    <th class="text-center" style="border: 1px solid #dee2e6;">Label</th>-->
<!--                                    <td style="border: 1px solid #dee2e6;">-->
<!--                                        <span t-if="o.label=='yes'" t-field="o.label"/>-->
<!--                                        <span t-else="">-</span>-->
<!--                                    </td>-->
<!--                                    <th class="text-center" style="border: 1px solid #dee2e6;">Custom Name</th>-->
<!--                                    <td style="border: 1px solid #dee2e6;">-->
<!--                                        <span t-if="o.custom_name=='yes'" t-field="o.custom_name"/>-->
<!--                                        <span t-else="">-</span>-->
<!--                                    </td>-->
