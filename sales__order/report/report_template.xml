    <template id="report_sales__order_invoice_template">
        <t t-call="web.html_container">
            <t t-call="famotain.external_layout">
                <div class="page">
                    <div class="oe_structure"/>
                    <div class="row mx-0 pt16" style="border-bottom: 1px solid #A9A9A9;">
                        <div class="col-6 mb16">
                            <h2 class="pt8">Invoice</h2>
                        </div>
                        <div class="col-6 mb16 pt8">
                            <div class="row text-right">
                                <div class="col-12">
                                    <strong><span t-field="o.name"/></strong> - <span t-field="o.state"/>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row mt32">
                        <div class="col-2 text-right"><strong>To</strong></div>
                        <div class="col-10">
                            <strong><span t-field="o.invoice_to"/></strong><br/>
                            <span t-field="o.address"/><br/>
                            <span t-field="o.sales_order_id.customer_id.city"/> - <span t-field="o.sales_order_id.customer_id.zip_code"/><br/>
                            <span t-field="o.phone"/>
                        </div>
                    </div>

                    <div class="row mt16">
                        <div class="col-2">
                            <strong>Invoice Date:</strong><br/>
                            <span t-esc="o.invoice_date.strftime('%d-%b-%Y')"/>
                        </div>
                        <div class="col-2">
                            <strong>Due Date:</strong><br/>
                            <span t-esc="o.due_date.strftime('%d-%b-%Y')"/>
                        </div>
                        <div class="col-2">
                            <strong>Source:</strong><br/>
                            <span t-field="o.source_document"/>
                        </div>
                        <div class="col-3">
                            <strong>Reference:</strong><br/>
                            <span t-field="o.name"/>
                        </div>
                    </div>

                    <h4 class="mt32">Price Details<span t-if="o.invoice_type=='down_payment'">*</span></h4>
                    <div class="row">
                        <div class="col-12">
                            <table class="table table-sm table-striped table-active">
                                <tr>
                                    <th class="text-center">Qty</th>
                                    <th>Description</th>
                                    <th class="text-right">Unit Price</th>
                                    <th class="text-right">Amount</th>
                                </tr>
                                <tr t-foreach="o.invoice_line_ids" t-as="price_line">
                                    <td class="text-center"><span t-field="price_line.qty"/>pcs</td>
                                    <td><span t-field="price_line.description"/></td>
                                    <td class="text-right"><span t-field="price_line.amount" t-options='{"widget": "monetary"}'/></td>
                                    <td class="text-right"><span t-field="price_line.total" t-options='{"widget": "monetary"}'/></td>
                                </tr>
                            </table>
                        </div>
                    </div>

                    <div class="row mt16">
                        <div class="col-7">
                            <span t-if="o.invoice_type=='down_payment'">*shipping price will be added later</span><br/>
                        </div>
                        <div class="col-5" style="padding: 0 20px;">
                            <table class="table table-sm">
                                <tr>
                                    <th>Total</th>
                                    <td class="text-right"><span t-field="o.sales_order_id.total_price" t-options='{"widget": "monetary"}'/></td>
                                </tr>
                                <tr>
                                    <th>Paid</th>
                                    <td class="text-right"><span t-field="o.sales_order_id.paid" t-options='{"widget": "monetary"}'/></td>
                                </tr>
                                <tr>
                                    <th>Amount Due</th>
                                    <td class="text-right"><strong><span t-field="o.amount" t-options='{"widget": "monetary"}'/></strong></td>
                                </tr>
                            </table>
                        </div>
                    </div>

                    <t t-set="payment_history">
                        <h4 class="mt32">Payment History</h4>
                        <div class="row">
                            <div class="col-6">
                                <table class="table table-sm table-striped table-active">
                                    <tr>
                                        <th class="text-center">Date</th>
                                        <th>Description</th>
                                        <th class="text-right">Amount</th>
                                    </tr>
                                    <t t-set="has_history" t-value="False"/>
                                    <t t-foreach="o.sales_order_id.invoice_ids.sorted(key=lambda r: r.id)" t-as="invoice">
                                        <tr t-if="invoice.id != o.id and invoice.state=='paid'">
                                            <t t-set="has_history" t-value="True"/>
                                            <td class="text-center"><span t-esc="invoice.payment_date.strftime('%d-%b-%Y')"/></td>
                                            <td><span t-field="invoice.name"/></td>
                                            <td class="text-right"><span t-field="invoice.amount" t-options='{"widget": "monetary"}'/></td>
                                        </tr>
                                    </t>
                                </table>
                            </div>
                        </div>
                    </t>

                    <t t-if="has_history" t-raw="payment_history"/>

                    <h4 class="mt32">Notes</h4>
                    <div class="row">
                        <div class="col-12">
                            <ul>
                                <li t-if="o.invoice_type=='down_payment'">Design will be made 2-3 days after payment</li>
                                <li>Please use the following communication for your payment: <strong><span t-field="o.name"/></strong></li>
                                <li>Make your payment promptly to the following bank account:</li>
                                <ul>
                                    <li>Bank Name: <strong>Bank Central Asia (BCA)</strong></li>
                                    <li>Account Number: <strong>394-033-4976</strong></li>
                                    <li>Account Name: <strong>Nabilla Yuwono Putri</strong></li>
                                </ul>
                            </ul>
                        </div>
                    </div>
                    <div class="oe_structure"/>
                </div>
            </t>
        </t>
    </template>

