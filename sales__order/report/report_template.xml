                                        <span t-field="o.address"/><br/>
                                        <span t-field="o.city"/> - <span t-field="o.customer_id.zip_code"/>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-2"/>
                                    <div class="col-10">
                                        <span t-field="o.phone"/>
                                    </div>
                                </div>
                                <div class="row mt16 py-2 px-4">
                                    <div class="col-12">
                                        <table class="table table-sm table-striped table-active">
                                            <tr>
                                                <th class="text-center">Qty</th>
                                                <th>Product</th>
                                            </tr>
                                            <tr t-foreach="o.product_order_ids" t-as="product_order">
                                                <td class="text-center"><span t-field="product_order.qty"/>pcs</td>
                                                <td><span t-field="product_order.product_id.display_name"/></td>
                                            </tr>
                                        </table>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-12 text-center mt16">
                                         <div name="financial_infos">
                                            <strong><span t-field="res_company.report_footer"/></strong>
                                        </div>

                                        <ul class="list-inline mb4">
                                            <li t-if="res_company.social_instagram" class="list-inline-item"><i class="fa fa-instagram" role="img" aria-label="Instagram" title="Instagram"/> <span t-field="res_company.social_instagram"/></li>
                                            <li t-if="res_company.phone" class="list-inline-item"><i class="fa fa-whatsapp" role="img" aria-label="Phone" title="Phone"/> <span t-field="res_company.phone"/></li>
                                            <li t-if="res_company.website" class="list-inline-item"><i class="fa fa-globe" role="img" aria-label="Website" title="Website"/> <span t-field="res_company.website"/></li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                            <div class="col-5 text-center" >
                                <div t-foreach="o.product_order_ids" t-as="product_order">
                                    <div class="p-3" t-if="product_order.product_id.product_type=='product'">
                                        <img t-attf-src="data:image/*;base64,{{product_order.design_image}}" style="max-width:200px; max-height: 150px"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row"/>
                        <div class="row mt24" style="border-top: 2px dashed black;">
                            <div class="col-7 mt24">
                                <strong><h4><span t-field="o.name"/></h4></strong>
                            </div>
                            <div class="col-5 text-right mt24">
                                <span t-if="o.state=='draft'" class="text-warning" t-field="o.state"/>
                                <span t-if="o.state=='confirm'" class="text-primary" t-field="o.state"/>
                                <span t-if="o.state=='send'" class="text-success" t-field="o.state"/>
                                <span t-if="o.state=='cancel'" class="text-danger" t-field="o.state"/>
                                 - <span class="text-danger"><strong>Deadline: </strong><span t-esc="o.deadline.strftime('%a, %d-%b-%Y')"/></span>
                            </div>
                        </div>
                        <div class="row mt16 mb16">
                            <div class="col-2">
                                <strong>Event Date:</strong><br/>
                                <span t-if="o.event_date" t-esc="o.event_date.strftime('%d-%b-%Y')"/>
                            </div>
                            <div class="col-2">
                                <strong>Qty Total:</strong><br/>
                                <span t-field="o.qty_total"/>
                            </div>
                            <div class="col-4">
                                <strong>Product:</strong><br/>
                                <span t-field="o.product"/><span t-if="o.custom_name=='yes'" class="text-danger"> - Names</span>
                            </div>
                            <div class="col-4">
                                <strong>Theme:</strong><br/>
                                <span t-field="o.theme"/>
                            </div>
<!--                            <div class="col-2">-->
<!--                                <strong>Qty Boy:</strong><br/>-->
<!--                                <span t-field="o.qty_boy"/><span t-if="o.custom_name=='yes'" class="text-danger"> - Names</span>-->
<!--                            </div>-->
<!--                            <div class="col-2">-->
<!--                                <strong>Qty Girl:</strong><br/>-->
<!--                                <span t-field="o.qty_girl"/><span t-if="o.custom_name=='yes'" class="text-danger"> - Names</span>-->
<!--                            </div>-->
                        </div>
                        <div class="row mt16 mb16">
                            <div class="col-2" t-if="not o.packaging_id">
                                <strong>Packing:</strong><br/><span>-</span>
                            </div>
                            <div class="col-2 text-danger" t-else="">
                                <strong>Packing:</strong><br/>
                                <span t-field="o.packaging_id.name"/> - <span t-field="o.packing"/>
                            </div>
                            <div class="col-2 text-danger" t-if="o.label=='yes'">
                                <strong>Label:</strong><br/>
                                <span t-field="o.label"/>
                            </div>
                            <div class="col-2" t-else="">
                                <strong>Label:</strong><br/>
                                <span t-field="o.label"/>
                            </div>
                            <div class="col-4">
                                <strong>Additional Text:</strong><br/>
                                <span t-field="o.additional_text"/>
                            </div>
                            <div class="col-4">
                                <strong>Thanks Card Writing:</strong><br/>
                                <span t-field="o.thanks_card_writing"/>
                            </div>

                        </div>
                        <div class="row mt8 mb8">
                            <div class="col-6 text-danger" t-if="o.custom_request">
                                <strong>Custom Request:</strong><br/>
                                <span t-field="o.custom_request"/>
                            </div>
                            <div class="col-6 text-danger" t-if="o.customer_notes">
                                <strong>Customer Notes:</strong><br/>
                                <span t-field="o.customer_notes"/>
                            </div>
                        </div>
                        <div class="row mt8 mb8">
                            <div class="col-12 text-danger" t-if="o.notes">
                                <strong>Internal Notes:</strong><br/>
                                <span t-field="o.notes"/>
                            </div>
                        </div>
                        <div t-if="o.product_order_ids" class="row mt16">
                            <div class="col-12">
                                <h5>Product Order</h5>
                                <table class="table table-sm">
                                    <tr>
                                        <th>Qty</th>
                                        <td t-foreach="o.product_order_ids" t-as="product_order">
                                            <span t-field="product_order.qty"/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <th>Product</th>
                                        <td t-foreach="o.product_order_ids" t-as="product_order">
                                            <span t-field="product_order.product_id.display_name"/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <th>Fabric</th>
                                        <td t-foreach="o.product_order_ids" t-as="product_order">
                                            <span t-field="product_order.fabric_color"/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <th>Ribbon</th>
                                        <td t-foreach="o.product_order_ids" t-as="product_order">
                                            <span t-field="product_order.ribbon_color"/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <th>Design</th>
                                        <td t-foreach="o.product_order_ids" t-as="product_order">
                                            <img t-if="product_order.product_id.product_type=='product'" t-attf-src="data:image/*;base64,{{product_order.design_image}}" style="max-width:200px; max-height: 150px"/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <th>Notes</th>
                                        <td t-foreach="o.product_order_ids" t-as="product_order">
                                            <span t-field="product_order.notes"/>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                        <div class="oe_structure"/>
                    </div>
                </t>
            </t>
        </t>
    </template>

