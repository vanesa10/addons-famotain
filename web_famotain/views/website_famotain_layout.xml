<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="web_famotain.order_form_layout">
         <t t-call="web_famotain.layout">
             <t t-set="title">Order Form | Famotain</t>
             <t t-set="head">
                 <t t-call="web_famotain.assets_frontend"/>
                 <script src="/web_famotain/static/js/jquery.validate.js"></script>
                 <script src="/web_famotain/static/js/jquery.steps.js"></script>
                 <script src="/web_famotain/static/js/main.js"></script>
                 <link rel="stylesheet" href="/web_famotain/static/fonts/material-design-iconic-font/css/material-design-iconic-font.min.css"/>
                 <link rel="stylesheet" href="/web_famotain/static/css/style.css"/>
            </t>
             <div class="wrapper">
                 <form id="order-form" name="order-form" method="POST" t-attf-action="{{action}}">
                    <div id="wizard">
                        <!-- SECTION 1 -->
                        <h4></h4>
                        <section>
                            <div class="form-group">
                                <label for="form-name">
                                Nama <span style="color:red;">*</span>
                                </label>
                                <input t-if="sales_order" id="input-name" name="input-name" type="text" class="form-control" required="" t-attf-value="{{sales_order.customer_id.name}}"/>
                                <input t-else="" id="input-name" name="input-name" type="text" class="form-control" required=""/>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-md-5">
                                    <label for="">
                                    Nomor HP <span style="color:red;">*</span>
                                    </label>
                                    <input t-if="sales_order" id="input-hp" name="input-hp" type="text" class="form-control" required="" t-attf-value="{{sales_order.customer_id.phone}}"/>
                                    <input t-else="" id="input-hp" name="input-hp" type="text" class="form-control" required=""/>
                                </div>
                                <div class="form-group col-md-7">
                                    <label for="">
                                    Email <span style="color:red;">*</span>
                                    </label>
                                    <input t-if="sales_order" id="input-email" name="input-email" type="email" class="form-control" required="" t-attf-value="{{sales_order.customer_id.email}}"/>
                                    <input t-else="" id="input-email" name="input-email" type="email" class="form-control" required=""/>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="input-address">
                                Alamat <span style="color:red;">*</span>
                                </label>
                                <textarea name="input-address" id="input-address" class="form-control" style="height: 100px" required=""><t t-if="sales_order" t-esc="sales_order.customer_id.address"/></textarea>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-md-8">
                                    <label for="input-city">
                                    Kota <span style="color:red;">*</span>
                                    </label>
                                    <input t-if="sales_order" id="input-city" name="input-city" type="text" class="form-control" required="" t-attf-value="{{sales_order.customer_id.city}}"/>
                                    <input t-else="" id="input-city" name="input-city" type="text" class="form-control" required=""/>
                                </div>
                                <div class="form-group col-md-4">
                                    <label for="">
                                    Kode Pos <span style="color:red;">*</span>
                                    </label>
                                    <input t-if="sales_order" id="input-zipcode" name="input-zipcode" type="text" class="form-control" required="" t-attf-value="{{sales_order.customer_id.zip_code}}"/>
                                    <input t-else="" id="input-zipcode" name="input-zipcode" type="text" class="form-control" required=""/>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="input-orderby">
                                Pemesanan Melalui <span style="color:red;">*</span>
                                </label>
                                <select id="input-orderby" name="input-orderby" class="form-control" required="">
                                    <option value="WA" selected="" t-if="not sales_order or (sales_order and sales_order.customer_id.contact_by == 'WA')">WA</option>
                                    <option value="WA" t-else="">WA</option>
                                    <option value="line" selected="" t-if="sales_order and sales_order.customer_id.contact_by == 'line'">Line</option>
                                    <option value="line" t-else="">Line</option>
                                </select>
                            </div>
                        </section>

                        <!-- SECTION 2 -->
                        <h4></h4>
                        <section>
                            <div class="form-group">
                                <label for="input-deadline">
                                    Deadline Pengiriman <span style="color:red;">*</span>
                                </label>
                                <input t-if="sales_order" id="input-deadline" name="input-deadline" type="date" class="form-control" required="" t-attf-value="{{sales_order.deadline}}" />
                                <input t-else="" id="input-deadline" name="input-deadline" type="date" class="form-control" required="" />
                                <small class="form-text text-muted">Hari minggu dan tanggal merah tidak ada pengiriman</small>
                            </div>
                            <div class="form-group">
                                <label for="input-eventdate">
                                    Tanggal Acara <span style="color:red;">*</span>
                                </label>
                                <input t-if="sales_order" id="input-eventdate" name="input-eventdate" type="date" class="form-control" required="" t-attf-value="{{sales_order.event_date}}"/>
                                <input t-else="" id="input-eventdate" name="input-eventdate" type="date" class="form-control" required="" />
                            </div>
                            <div class="form-group">
                                <label for="input-theme">
                                    Tema <span style="color:red;">*</span>
                                </label>
                                <input t-if="sales_order and edit" id="input-theme" name="input-theme" type="text" class="form-control" required="" t-attf-value="{{sales_order.theme}}"/>
                                <input t-else="" id="input-theme" name="input-theme" type="text" class="form-control" required=""/>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-md-3">
                                    <label for="input-qty">
                                    Qty <span style="color:red;">*</span>
                                    </label>
                                    <input t-if="sales_order and edit" id="input-qty" name="input-qty" type="number" class="form-control" min="1" required="" t-attf-value="{{sales_order.qty_total}}"/>
                                    <input t-else="" id="input-qty" name="input-qty" type="number" class="form-control" min="1" required="" />
                                </div>
                                <div class="form-group col-md-9">
                                    <label for="input-product">
                                    Product yang dipesan <span style="color:red;">*</span>
                                    </label>
                                    <input t-if="sales_order and edit" id="input-product" name="input-product" type="text" class="form-control" required="" t-attf-value="{{sales_order.product}}"/>
                                    <input t-else="" id="input-product" name="input-product" type="text" class="form-control" required="" />
                                </div>
                            </div>
                            <div class="form-group">
                                <legend for="input-customname" class="col-form-label pt-0">
                                    Custom Nama
                                </legend>
                                <div class="form-check form-check-inline">
                                  <input t-if="sales_order and edit and sales_order.custom_name == 'yes'" class="form-check-input" type="radio" name="input-customname" id="input-customname-y" value="yes" checked=""/>
                                  <input t-else="" class="form-check-input" type="radio" name="input-customname" id="input-customname-y" value="yes"/>
                                  <label class="form-check-label" for="input-customname-y">Yes</label>
                                </div>
                                <div class="form-check form-check-inline">
                                  <input t-if="not sales_order or not edit or sales_order.custom_name == 'no'" class="form-check-input" type="radio" name="input-customname" id="input-customname-n" value="no" checked=""/>
                                  <input t-else="" class="form-check-input" type="radio" name="input-customname" id="input-customname-n" value="no"/>
                                  <label class="form-check-label" for="input-customname-n">No</label>
                                </div>
                            </div>
<!--                            <div class="form-row form-group">-->
<!--                                <div class="form-holder">-->
<!--                                    <label for="">-->
<!--                                    Qty Cewe-->
<!--                                    </label>-->
<!--                                    <input id="input-qtyce" name="input-qtyce" type="number" class="form-control" min="0"/>-->
<!--                                </div>-->
<!--                                <div class="form-holder">-->
<!--                                    <label for="">-->
<!--                                    Qty Cowo-->
<!--                                    </label>-->
<!--                                    <input id="input-qtyco" name="input-qtyco" type="number" class="form-control" min="0"/>-->
<!--                                </div>-->
<!--                            </div>-->
                        </section>

                        <!-- SECTION 3 -->
                        <h4></h4>
                        <section>
                            <div class="form-group">
                                <label for="input-packaging">
                                Packaging <span style="color:red;">*</span>
                                </label>
                                <t t-set="packing_class" t-value="'form-group form-hide'"/>
                                <select id="input-packaging" name="input-packaging" class="form-control" required="">
                                    <option value="-">No Packaging</option>
                                    <t t-foreach="packaging_list" t-as="packaging">
                                        <t t-if="sales_order and edit and sales_order.packaging_id.id == packaging.id">
                                            <t t-set="packing_class" t-value="'form-group'"/>
                                            <option t-attf-value="{{packaging.code}}" selected=""><t t-esc="packaging.name"/> (+<span t-field="packaging.price" t-options='{"widget": "monetary"}'/>)</option>
                                        </t>
                                        <t t-else="">
                                            <option t-attf-value="{{packaging.code}}"><t t-esc="packaging.name"/> (+<span t-field="packaging.price" t-options='{"widget": "monetary"}'/>)</option>
                                        </t>
                                    </t>
                                </select>
                            </div>
                            <div id="form-packing" t-attf-class="{{packing_class}}">
                                <legend for="input-packing" class="col-form-label pt-0">
                                    Packing <span style="color:red;">*</span>
                                </legend>
                                <div class="form-check">
                                  <input t-if="sales_order and edit and sales_order.packing == 'pack'" class="form-check-input" type="radio" name="input-packing" id="input-packing-ps" value="sendiri" required=""/>
                                  <input t-else="" class="form-check-input" type="radio" name="input-packing" id="input-packing-ps" value="sendiri" checked="" required=""/>
                                  <label class="form-check-label" for="input-packing-ps">Packing sendiri</label>
                                </div>
                                <small class="form-text text-muted" style="margin-left: 1.3rem;">
                                    plastik, pita, thankyou card, dll terpisah
                                </small>
                                <div class="form-check">
                                  <input t-if="sales_order and edit and sales_order.packing == 'pack'" class="form-check-input" type="radio" name="input-packing" id="input-packing-pack" value="pack" required="" checked=""/>
                                  <input t-else="" class="form-check-input" type="radio" name="input-packing" id="input-packing-pack" value="pack" required=""/>
                                  <label class="form-check-label" for="input-packing-pack">Sudah packing</label>
                                </div>
                                <small class="form-text text-muted" style="margin-left: 1.3rem;">
                                    Ongkir lebih mahal karena volume
                                </small>
                            </div>
                            <div class="form-group">
                                <legend for="input-label" class="col-form-label pt-0 m-0">
                                    Label
                                </legend>
                                <img t-if="label" t-attf-src="data:image/*;base64,{{label.image}}" class="rounded mx-auto d-block" style="max-width: 160px;"/>
                                <small class="form-text text-muted text-center">
                                    contoh penambahan label di dalam tas
                                </small>
                                <div class="form-check">
                                  <input t-if="sales_order and edit and sales_order.label == 'yes'" class="form-check-input" type="radio" name="input-label" id="input-label-y" value="yes" checked="" required=""/>
                                  <input t-else="" class="form-check-input" type="radio" name="input-label" id="input-label-y" value="yes" required=""/>
                                  <label class="form-check-label" for="input-label-y">Yes (+<span t-field="label.price" t-options='{"widget": "monetary"}'/>)</label>
                                </div>
                                <div class="form-check">
                                  <input t-if="not sales_order or not edit or sales_order.label == 'no'" class="form-check-input" type="radio" name="input-label" id="input-label-n" value="no" checked="" required=""/>
                                  <input t-else="" class="form-check-input" type="radio" name="input-label" id="input-label-n" value="no" required=""/>
                                  <label class="form-check-label" for="input-label-n">No</label>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="input-addons">
                                    Add Ons
                                </label>
                                <input t-if="sales_order and edit" id="input-addons" name="input-addons" type="text" class="form-control" t-attf-value="{{sales_order.add_ons}}"/>
                                <input t-else="" id="input-addons" name="input-addons" type="text" class="form-control" />
                                <small class="form-text text-muted">
                                    Cek katalog kami untuk memilih add ons
                                </small>
                            </div>
                        </section>

                        <!-- SECTION 4 -->
                        <h4></h4>
                        <section>
                            <div class="form-group">
                                <label for="input-additionalwriting">
                                    Tambahan Penulisan
                                </label>
                                <textarea name="input-additionalwriting" id="input-additionalwriting" class="form-control" placeholder="CONTOH : Wilford is turning 5" style="height: 80px"><t t-if="sales_order" t-esc="sales_order.additional_text"/></textarea>
                                <small class="form-text text-muted">
                                    untuk dituliskan pada design tas/label dalam tas. Bisa menyusul (tulis menyusul).
                                </small>
                            </div>
                            <div class="form-group">
                                <label for="input-thankcardwriting">
                                    Tulisan pada thanks card
                                </label>
                                <textarea name="input-thankcardwriting" id="input-thankcardwriting" class="form-control" placeholder="CONTOH: Thankyou for making my birthday so special" style="height: 80px"><t t-if="sales_order" t-esc="sales_order.thanks_card_writing"/></textarea>
                                <small class="form-text text-muted">
                                    untuk dituliskan pada thankyou card. Bisa menyusul (tulis menyusul).
                                </small>
                            </div>
                            <div class="form-group">
                                <label for="input-customrequest">
                                    Custom Request
                                </label>
                                <textarea name="input-customrequest" id="input-customrequest" class="form-control" style="height: 80px"><t t-if="sales_order and edit" t-esc="sales_order.custom_request"/></textarea>
                                <small class="form-text text-muted">
                                    request khusus terkait model tas/ukuran tas/bahan tas harap dituliskan dengan jelas di kolom ini
                                </small>
                            </div>
                            <div class="form-group">
                                <label for="input-note">
                                    Notes
                                </label>
                                <textarea name="input-note" id="input-note" class="form-control" style="height: 149px"><t t-if="sales_order and edit" t-esc="sales_order.customer_notes"/></textarea>
                            </div>
                        </section>
                    </div>
                </form>
		    </div>
             <script type="text/javascript">
                today = new Date().toISOString().split("T")[0];
                document.getElementById("input-deadline").setAttribute("min", today);
                document.getElementById("input-eventdate").setAttribute("min", today);
            </script>
         </t>
    </template>

    <template id="web_famotain.order_info_layout">
        <t t-call="web_famotain.layout">
             <t t-set="title">Order <t t-esc="info"/> | Famotain</t>
             <t t-set="head">
                 <t t-call="web_famotain.assets_frontend"/>
             </t>
            <div class="container">
                <div class="row align-items-center h-100">
                    <div class="col-xl-8 mx-auto">
                        <div class="card">
                            <h5 class="card-header">Your order has been <strong><t t-esc="info"/></strong>!</h5>
                            <div class="card-body">
                                <h3 class="card-title font-weight-bold"><t t-esc="sales_order.name"/></h3>
                                <p class="card-text mb-3">Kirim nomor order diatas ke <a t-attf-href='https://api.whatsapp.com/send?phone={{res_company.phone}}&amp;text={{sales_order.name}}'>Whatsapp</a> kami untuk respons yang lebih cepat</p>
                            </div>
                            <div class="card-footer text-right">
                                <a t-attf-href='https://api.whatsapp.com/send?phone={{res_company.phone}}&amp;text={{sales_order.name}}' class="btn btn-link">Kirim Whatsapp</a>
                                <a t-attf-href='/order/{{sales_order.encryption}}' class="btn btn-secondary">View Order</a>
                                <a t-attf-href='/order/form/{{sales_order.encryption}}' class="btn btn-primary">Order lagi</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>

    <template id="web_famotain.order_layout">
        <t t-call="web_famotain.layout">
             <t t-set="title">View Order | Famotain</t>
             <t t-set="head">
                 <t t-call="web_famotain.assets_frontend"/>
                 <script src="/web_famotain/static/js/chocolat.js"></script>
                 <link rel="stylesheet" href="/web_famotain/static/css/chocolat.css"/>
             </t>
            <div class="container pb-5">
                <div class="row my-5">
                    <div class="col-12 text-center">
                        <span t-if="sales_order.state == 'draft'" class="badge badge-pill badge-info">Draft</span>
                        <span t-if="sales_order.state == 'confirm'" class="badge badge-pill badge-primary">Confirmed</span>
                        <span t-if="sales_order.state == 'send'" class="badge badge-pill badge-success">Sent</span>
                        <span t-if="sales_order.state == 'cancel'" class="badge badge-pill badge-light">Cancelled</span>
                        <h1 class="font-weight-bold"><t t-esc="sales_order.name"/></h1>
                    </div>
                </div>
                <div class="card">
                    <div class="card-header">
                        <ul class="nav nav-tabs card-header-tabs" style="font-size: 11pt">
                            <li class="nav-item"><a id="order-tab" class="nav-link active" href="#order" data-toggle="tab" role="tab" aria-controls="data" aria-selected="true">Order</a></li>
                            <li class="nav-item"><a id="add_ons-tab" class="nav-link" href="#add_ons" data-toggle="tab" role="tab" aria-controls="add_ons" aria-selected="false">Addons</a></li>
                            <t t-if="design">
                                <li class="nav-item"><a id="design-tab" class="nav-link" href="#design" data-toggle="tab" role="tab" aria-controls="design" aria-selected="false">Design</a></li>
                                <li class="nav-item"><a id="price-tab" class="nav-link" href="#price" data-toggle="tab" role="tab" aria-controls="price" aria-selected="false">Price</a></li>
                            </t>
                        </ul>
                    </div>
                    <div class="tab-content">
                        <div id="order" class="card-body tab-pane fade show active" role="tabpanel" aria-labelledby="order-tab">
                            <div class="row py-3">
                                <div class="col-md-2">
                                    <span class="font-weight-bold">Nama</span>
                                </div>
                                <div class="col-md-4 pb-3">
                                    <p><t t-esc="sales_order.customer_id.name"/></p>
                                </div>
                                <div class="col-md-2">
                                    <span class="font-weight-bold">Alamat</span>
                                </div>
                                <div class="col-md-4 pb-3">
                                    <p>
                                        <t t-esc="sales_order.customer_id.address"/><br/>
                                        <t t-esc="sales_order.customer_id.city"/> - <t t-esc="sales_order.customer_id.zip_code"/>
                                    </p>
                                </div>
                                <div class="col-md-2">
                                    <span class="font-weight-bold">No HP</span>
                                </div>
                                <div class="col-md-4 pb-3">
                                    <p><t t-esc="sales_order.customer_id.phone"/></p>
                                </div>
                                <div class="col-md-2">
                                    <span class="font-weight-bold">Contact By</span>
                                </div>
                                <div class="col-md-4 pb-3">
                                    <p><t t-esc="sales_order.customer_id.contact_by"/></p>
                                </div>
                                <div class="col-md-2">
                                    <span class="font-weight-bold">Deadline</span>
                                </div>
                                <div class="col-md-4 pb-3">
                                    <p><t t-esc="sales_order.deadline.strftime('%a, %d - %b - %Y')"/></p>
                                </div>
                                <div class="col-md-2">
                                    <span class="font-weight-bold">Tanggal Acara</span>
                                </div>
                                <div class="col-md-4 pb-3">
                                    <p>
                                        <t t-esc="sales_order.event_date.strftime('%a, %d - %b - %Y')"/>
                                    </p>
                                </div>
                                <div class="col-md-2">
                                    <span class="font-weight-bold">Product</span>
                                </div>
                                <div class="col-md-4 pb-3">
                                    <p><t t-esc="sales_order.qty_total"/>pcs - <t t-esc="sales_order.product"/></p>
                                </div>
                                <div class="col-md-2">
                                    <span class="font-weight-bold">Theme</span>
                                </div>
                                <div class="col-md-4 pb-3">
                                    <p><t t-esc="sales_order.theme"/></p>
                                </div>
                                <div class="col-md-2">
                                    <span class="font-weight-bold">Custom Name</span>
                                </div>
                                <div class="col-md-4 pb-3">
                                    <p t-if="sales_order.custom_name" t-esc="sales_order.custom_name"/>
                                    <p t-else="">-</p>
                                </div>
                            </div>
                        </div>
                        <div id="add_ons" class="card-body tab-pane fade" role="tabpanel" aria-labelledby="add_ons-tab">
                            <div class="row py-3">
                                <div class="col-md-2">
                                    <span class="font-weight-bold">Packaging</span>
                                </div>
                                <div class="col-md-4 pb-3">
                                    <p t-if="sales_order.packaging_id" t-esc="sales_order.packaging_id.name"/>
                                    <p t-else="">-</p>
                                </div>
                                <div class="col-md-2">
                                    <span class="font-weight-bold">Packing</span>
                                </div>
                                <div class="col-md-4 pb-3">
                                    <p t-if="sales_order.packaging_id" t-esc="sales_order.packing"/>
                                    <p t-else="">-</p>
                                </div>
                                <div class="col-md-2">
                                    <span class="font-weight-bold">Label</span>
                                </div>
                                <div class="col-md-4 pb-3">
                                    <p><t t-esc="sales_order.label"/></p>
                                </div>
                                <div class="col-md-2">
                                    <span class="font-weight-bold">Add ons</span>
                                </div>
                                <div class="col-md-4 pb-3">
                                    <p t-if="sales_order.add_ons" t-esc="sales_order.add_ons"/>
                                    <p t-else="">-</p>
                                </div>
                                <div class="col-md-2">
                                    <span class="font-weight-bold">Tambahan penulisan</span>
                                </div>
                                <div class="col-md-4 pb-3">
                                    <p t-if="sales_order.additional_text" t-esc="sales_order.additional_text"/>
                                    <p t-else="">-</p>
                                </div>
                                <div class="col-md-2">
                                    <span class="font-weight-bold">Thanks card</span>
                                </div>
                                <div class="col-md-4 pb-3">
                                    <p t-if="sales_order.thanks_card_writing" t-esc="sales_order.thanks_card_writing"/>
                                    <p t-else="">-</p>
                                </div>
                                <div class="col-md-2">
                                    <span class="font-weight-bold">Custom Request</span>
                                </div>
                                <div class="col-md-4 pb-3">
                                    <p t-if="sales_order.custom_request" t-esc="sales_order.custom_request"/>
                                    <p t-else="">-</p>
                                </div>
                                <div class="col-md-2">
                                    <span class="font-weight-bold">Notes</span>
                                </div>
                                <div class="col-md-4 pb-3">
                                    <p t-if="sales_order.customer_notes" t-esc="sales_order.customer_notes"/>
                                    <p t-else="">-</p>
                                </div>
                            </div>
                        </div>
                        <t t-if="design">
                            <div id="design" class="card-body tab-pane fade" role="tabpanel" aria-labelledby="design-tab">
                                <div class="table-responsive py-3">
                                    <t t-if="sales_order.product_order_ids">
                                        <table class="table table-striped table-bordered">
                                            <caption>Dimohon untuk mencocokan kembali data dan design (tanggal, penulisan, dan nama)</caption>
                                            <thead>
                                                <tr>
                                                    <th scope="col" class="text-center">Qty</th>
                                                    <th scope="col">Product</th>
                                                    <th scope="col">Description</th>
                                                    <th scope="col" class="text-center">Design</th>
                                                    <th scope="col" t-if="design_2" class="text-center">Design Side A</th>
                                                    <th scope="col" t-if="design_3" class="text-center">Design Side B</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <tr t-foreach="sales_order.product_order_ids" t-as="product_order">
                                                    <td scope="row" class="text-center"><span t-field="product_order.qty"/> pcs</td>
                                                    <td><span t-field="product_order.product_id.display_name"/></td>
                                                    <td><span t-field="product_order.fabric_color"/></td>
                                                    <td class="text-center">
                                                        <a class="chocolat-image" t-attf-href="data:image/*;base64,{{product_order.design_image}}" title="Design" t-if="(product_order.product_id.product_type=='product') and (product_order.design_image)">
                                                            <img t-attf-src="data:image/*;base64,{{product_order.design_image}}" style="max-width:200px; max-height: 150px"/>
                                                        </a>
                                                    </td>
                                                    <td t-if="design_2"  class="text-center">
                                                        <a class="chocolat-image" t-attf-href="data:image/*;base64,{{product_order.design_image_2}}" title="Design Side A" t-if="(product_order.product_id.product_type=='product') and (product_order.design_image_2)">
                                                            <img t-attf-src="data:image/*;base64,{{product_order.design_image_2}}" style="max-width:200px; max-height: 150px"/>
                                                        </a>
                                                    </td>
                                                    <td t-if="design_3"  class="text-center">
                                                        <a class="chocolat-image" t-attf-href="data:image/*;base64,{{product_order.design_image_3}}" title="Design Side B" t-if="(product_order.product_id.product_type=='product') and (product_order.design_image_3)">
                                                            <img t-attf-src="data:image/*;base64,{{product_order.design_image_3}}" style="max-width:200px; max-height: 150px"/>
                                                        </a>
                                                    </td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </t>
                                </div>
                            </div>
                            <div id="price" class="card-body tab-pane fade" role="tabpanel" aria-labelledby="price-tab">
                                <div class="table-responsive py-3">
                                    <t t-if="sales_order.product_order_ids">
                                        <table class="table table-striped table-bordered">
                                            <caption>Harga ongkir akan ditambahkan sebelum barang dikirim</caption>
                                            <thead>
                                                <tr>
                                                    <th scope="col" class="text-center">Qty</th>
                                                    <th scope="col">Description</th>
                                                    <th scope="col" class="text-right">Unit Price</th>
                                                    <th scope="col" class="text-right">Amount</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <tr t-foreach="sales_order.price_line_ids" t-as="price_line">
                                                    <td scope="row" class="text-center"><span t-field="price_line.qty"/> pcs</td>
                                                    <td><span t-field="price_line.description"/></td>
                                                    <td class="text-right"><span t-field="price_line.amount" t-options='{"widget": "monetary"}'/></td>
                                                    <td class="text-right"><span t-field="price_line.balance" t-options='{"widget": "monetary"}'/></td>
                                                </tr>
                                                <tr>
                                                    <td scope="row" colspan="3" class="text-right">Total:</td>
                                                    <td class="text-right"><span t-field="sales_order.total_price" t-options='{"widget": "monetary"}'/></td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </t>
                                </div>
                            </div>
                        </t>
                    </div>
                    <t t-if="sales_order.state == 'draft'">
                        <div class="card-footer text-right">
                            <a class="btn btn-secondary" t-attf-href='/order/{{sales_order.encryption}}/edit'>Edit</a>
                            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#confirmModal">Confirm</button>
                        </div>
                    </t>
                </div>
            </div>
            <!-- Modal -->
            <t t-if="sales_order.state == 'draft'">
                <div class="modal fade" id="confirmModal" tabindex="-1" role="dialog" aria-labelledby="confirmModalLabel" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="confirmModalLabel">Confirm Order</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&amp;times</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                <div class="row">
                                    <div class="col-12">
                                        Dimohon untuk mencocokan kembali semua data dan design (tanggal, penulisan, nama, dll). Setelah order di konfirmasi, <strong>data dan design tidak dapat diubah</strong> lagi.
                                    </div>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <small>Are you sure you want to confirm this order?</small>
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">No</button>
                                <a class="btn btn-primary" t-attf-href='/order/action/confirm/{{sales_order.encryption}}'>Yes</a>
                            </div>
                        </div>
                  </div>
                </div>
            </t>
        </t>
        <script>
            Chocolat(document.querySelectorAll('.chocolat-image'), {
                imageSize: 'contain',
            })
        </script>
    </template>

    <template id="web_famotain.error_layout">
        <t t-call="web_famotain.layout">
             <t t-set="title">Error | Famotain</t>
             <t t-set="head">
