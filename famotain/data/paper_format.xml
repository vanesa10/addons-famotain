<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <!--Ukuran A4 TAPI ada perubahan pada margin-->
        <record id="paper_format_A4_internal" model="report.paperformat">
            <field name="name">A4</field>
            <field name="default" eval="True" />
            <field name="format">A4</field>
            <field name="page_height">0</field>
            <field name="page_width">0</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">8</field>
            <field name="margin_bottom">12</field>
            <field name="margin_left">7</field>
            <field name="margin_right">7</field>
            <field name="header_line" eval="False" />
            <field name="header_spacing">10</field>
            <field name="dpi">90</field>
        </record>

        <record id="paper_format_A4_external" model="report.paperformat">
            <field name="name">A4</field>
            <field name="default" eval="True" />
            <field name="format">A4</field>
            <field name="page_height">0</field>
            <field name="page_width">0</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">30</field>
            <field name="margin_bottom">20</field>
            <field name="margin_left">7</field>
            <field name="margin_right">7</field>
            <field name="header_line" eval="False" />
            <field name="header_spacing">25</field>
            <field name="dpi">90</field>
        </record>

        <!--Ukuran A4 TAPI digunakan untuk prinout A5, Direkayasa Margin Bottom = 1/2 Paper = #148.5 + 12-->
        <record id="paper_format_A5_A4" model="report.paperformat">
            <field name="name">A5</field>
            <field name="default" eval="True" />
            <field name="format">A4</field>
            <field name="page_height">0</field>
            <field name="page_width">0</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">22</field>
            <field name="margin_bottom">160</field>
            <field name="margin_left">7</field>
            <field name="margin_right">7</field>
            <field name="header_line" eval="False" />
            <field name="header_spacing">20</field>
            <field name="dpi">90</field>
        </record>

        <!--Ukuran F4(Folio) TAPI digunakan untuk prinout F5, Direkayasa Margin Bottom = 1/2 Paper-->
        <record id="paper_format_F5_F4" model="report.paperformat">
            <field name="name">F5</field>
            <field name="default" eval="True"/>
            <field name="format">custom</field>
            <field name="page_height">330</field>
            <field name="page_width">210</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">15</field>
            <field name="margin_bottom">185</field>
            <!--<field name="margin_bottom">165</field>-->
            <field name="margin_left">5</field>
            <field name="margin_right">5</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">12</field>
            <field name="dpi">96</field>
        </record>
    </data>
</openerp>